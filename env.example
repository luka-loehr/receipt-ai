# Environment example for Receipt Printer
# Copy this file to .env and adjust values as needed


# User
USER_NAME=Luka
USER_TIMEZONE=Europe/Berlin
RECEIPT_LANGUAGE=german

# AI
AI_MODEL=gpt-4o-mini
MAX_OUTPUT_TOKENS=1200
OPENAI_API_KEY=your_openai_api_key_here

# Weather
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_LOCATION=Karlsruhe,DE

# Email processing
MAX_EMAILS_TO_PROCESS=10

# Google Tasks
GENERAL_TASKS_LIST_NAME=Allgemeines
SHOPPING_LIST_NAME=Einkaufsliste

# Output paths
OUTPUT_PNG_FILE=outputs/png/daily_brief.png
OUTPUT_TXT_FILE=outputs/txt/daily_brief.txt
OUTPUT_ESCPOS_FILE=outputs/escpos/daily_brief.txt

# Preview behavior
PREVIEW_PNG=true

# Thermal printer
THERMAL_PRINTER_TYPE=file_test
PAPER_WIDTH_MM=58

# USB printer config (set via printer_setup.py)
PRINTER_VENDOR_ID=
PRINTER_PRODUCT_ID=
PRINTER_IN_EP=
PRINTER_OUT_EP=

# Network printer config (optional)
PRINTER_HOST=
PRINTER_PORT=

# File printer config (for testing)
PRINTER_FILE_PATH=outputs/escpos/daily_brief.txt

# Printer Console (Always-on UI)
PRINTER_CONSOLE_HOST=127.0.0.1
PRINTER_CONSOLE_PORT=8765
PRINTER_CONSOLE_DEBUG=false
