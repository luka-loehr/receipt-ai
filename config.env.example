# API Keys and Configuration
# Copy this file to .env and fill in your actual values

# OpenWeatherMap API (free tier: https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Gemini API (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google API OAuth2 (unified credentials for Gmail, Calendar, etc.)
GOOGLE_CREDENTIALS_FILE=google_credentials.json

# Location for weather (city,country code)
WEATHER_LOCATION=Berlin,DE

# User preferences
USER_NAME=Luka
USER_TIMEZONE=Europe/Berlin

# Email filtering preferences
MAX_EMAILS_TO_PROCESS=10
EMAIL_PRIORITY_KEYWORDS=urgent,important,asap,deadline,meeting
EMAIL_SPAM_FILTERS=newsletter,marketing,promotion,unsubscribe
